<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">      //方形
                <solid android:color="#ffffff"/>
                <stroke
                    android:width="1dip"
                    android:color="@color/colorBlack"
                    />      //边的宽度和颜色
                <padding
                    android:bottom ="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
            <corners android:radius = "6dp"/>   //边的长度
        </shape>
    </item>
</layer-list>